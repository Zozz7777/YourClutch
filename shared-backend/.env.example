# Clutch Platform Environment Variables
# Copy this file to .env and fill in the actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/clutch
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here

# CEO Configuration (CRITICAL SECURITY)
CEO_EMAIL=your-ceo-email@company.com

# Two-Factor Authentication
TWO_FA_SECRET=your-2fa-secret-key-here

# Test Credentials (for development only)
TEST_PARTNER_EMAIL=test@clutch.com
TEST_PARTNER_PHONE=+201234567890
TEST_PARTNER_PASSWORD=test123

# API Configuration
API_BASE_URL=https://api.clutch.com/v1
API_VERSION=v1

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# External Services
EMAIL_PROVIDER=smtp
STORAGE_PROVIDER=local

# AWS Configuration (if using S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://admin.clutch.com
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
NODE_ENV=production

# Performance Configuration
PORT=5000
HOST=0.0.0.0

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
METRICS_INTERVAL=60000

# Feature Flags
ENABLE_REAL_TIME_UPDATES=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_REPORTING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
ENABLE_MONITORING=true