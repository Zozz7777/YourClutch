# Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values
# DO NOT COMMIT THE ACTUAL .env.production FILE TO VERSION CONTROL

# Database Configuration (MongoDB Atlas)
MONGODB_URI=mongodb+srv://[USERNAME]:[PASSWORD]@[CLUSTER].mongodb.net/?retryWrites=true&w=majority&appName=Clutch
MONGODB_DB=clutch

# JWT Configuration (Generate a strong secret for production)
JWT_SECRET=[GENERATE_STRONG_SECRET_AT_LEAST_64_CHARACTERS]

# Server Configuration
PORT=5000
NODE_ENV=production

# Firebase Admin Configuration
FIREBASE_ADMIN_PROJECT_ID=[YOUR_FIREBASE_PROJECT_ID]
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n[YOUR_FIREBASE_ADMIN_PRIVATE_KEY]\n-----END PRIVATE KEY-----"
FIREBASE_ADMIN_CLIENT_EMAIL=[YOUR_FIREBASE_ADMIN_CLIENT_EMAIL]

# Redis Configuration (if using Redis)
REDIS_URL=redis://[REDIS_HOST]:[REDIS_PORT]

# Stripe Configuration (for payment processing)
STRIPE_SECRET_KEY=sk_live_[YOUR_STRIPE_SECRET_KEY]
STRIPE_PUBLISHABLE_KEY=pk_live_[YOUR_STRIPE_PUBLISHABLE_KEY]
STRIPE_WEBHOOK_SECRET=whsec_[YOUR_STRIPE_WEBHOOK_SECRET]
STRIPE_SUCCESS_URL=https://admin.yourclutch.com/payment/success
STRIPE_CANCEL_URL=https://admin.yourclutch.com/payment/cancel

# Security Configuration
HELMET_ENABLED=true
HELMET_CONTENT_SECURITY_POLICY=true
HELMET_HSTS_MAX_AGE=31536000
HELMET_HIDE_POWERED_BY=true
HELMET_FRAMEGUARD=true
HELMET_XSS_PROTECTION=true

# CORS Configuration (update with your actual domains)
ALLOWED_ORIGINS=https://admin.yourclutch.com,https://yourclutch.com
CORS_CREDENTIALS=true

# Keep-Alive Configuration (update with your actual domain)
KEEP_ALIVE_URL=https://[YOUR_DOMAIN]/health/ping

# Performance Configuration
DB_MAX_POOL_SIZE=100
DB_MIN_POOL_SIZE=10
DB_CONNECT_TIMEOUT_MS=30000
DB_SOCKET_TIMEOUT_MS=45000

# Monitoring Configuration
MONITORING_ENABLED=true
APM_ENABLED=true
LOG_LEVEL=info

# Additional Security (optional)
SESSION_SECRET=[GENERATE_ANOTHER_STRONG_SECRET]
ENCRYPTION_KEY=[GENERATE_32_CHARACTER_ENCRYPTION_KEY]

# Rate Limiting (adjust based on your needs)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Email Configuration (if using email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=[YOUR_EMAIL]
SMTP_PASS=[YOUR_EMAIL_PASSWORD]

# Google Maps API (if using location features)
GOOGLE_MAPS_API_KEY=[YOUR_GOOGLE_MAPS_API_KEY]

# Slack/Teams Webhook (for notifications)
SLACK_WEBHOOK_URL=[YOUR_SLACK_WEBHOOK_URL]
TEAMS_WEBHOOK_URL=[YOUR_TEAMS_WEBHOOK_URL]

# Monitoring Services (optional)
SENTRY_DSN=[YOUR_SENTRY_DSN]
NEW_RELIC_LICENSE_KEY=[YOUR_NEW_RELIC_LICENSE_KEY]
DATADOG_API_KEY=[YOUR_DATADOG_API_KEY]

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Disaster Recovery
DR_ENABLED=true
DR_BACKUP_LOCATION=[YOUR_BACKUP_LOCATION]
DR_RECOVERY_POINT_OBJECTIVE=3600
DR_RECOVERY_TIME_OBJECTIVE=7200
