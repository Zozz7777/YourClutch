# ==================== CLUTCH BACKEND ENVIRONMENT CONFIGURATION ====================

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
DB_NAME=clutch-db
DB_HOST=localhost
DB_PORT=27017

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourclutch.com

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-super-secret-session-key-change-in-production
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# API Keys
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
FIREBASE_SERVICE_ACCOUNT_KEY=./config/firebase-service-account.json
OPENAI_API_KEY=your-openai-api-key

# Monitoring and Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Performance Configuration
CACHE_TTL=3600
MEMORY_LIMIT=512
REQUEST_TIMEOUT=30000

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_EMAIL_MARKETING=false

# External Services
PAYMENT_GATEWAY_API_KEY=your-payment-gateway-key
SMS_API_KEY=your-sms-api-key
PUSH_NOTIFICATION_KEY=your-push-notification-key

# Development/Testing
TEST_DATABASE_URL=mongodb://localhost:27017/clutch-test-db
DEBUG_MODE=true
MOCK_EXTERNAL_APIS=false
