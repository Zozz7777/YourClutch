# Test Environment Configuration
# This file contains environment variables for testing

# Database Configuration
TEST_DB_URL=mongodb://localhost:27017/clutch_test
TEST_DB_NAME=clutch_test
TEST_REDIS_URL=redis://localhost:6379/1

# API Configuration
TEST_API_URL=http://localhost:5000
TEST_API_PORT=5000
TEST_ADMIN_URL=http://localhost:3000
TEST_ADMIN_PORT=3000

# Authentication
TEST_JWT_SECRET=test_jwt_secret_key_for_testing_only
TEST_JWT_EXPIRES_IN=1h
TEST_REFRESH_TOKEN_SECRET=test_refresh_secret_for_testing

# External Services (Mock/Test)
TEST_STRIPE_SECRET_KEY=sk_test_mock_key
TEST_TWILIO_ACCOUNT_SID=test_account_sid
TEST_TWILIO_AUTH_TOKEN=test_auth_token
TEST_FIREBASE_PROJECT_ID=clutch-test-project

# AI Services (Test Keys)
TEST_OPENAI_API_KEY=test_openai_key
TEST_ANTHROPIC_API_KEY=test_anthropic_key
TEST_GOOGLE_AI_API_KEY=test_google_ai_key

# Email Configuration
TEST_EMAIL_HOST=smtp.test.com
TEST_EMAIL_PORT=587
TEST_EMAIL_USER=test@clutch.com
TEST_EMAIL_PASS=test_password

# File Storage
TEST_UPLOAD_PATH=./test-uploads
TEST_MAX_FILE_SIZE=10485760

# Rate Limiting
TEST_RATE_LIMIT_WINDOW=900000
TEST_RATE_LIMIT_MAX=100

# Security
TEST_BCRYPT_ROUNDS=4
TEST_SESSION_SECRET=test_session_secret

# Mobile Testing
ANDROID_HOME=/opt/android-sdk
ANDROID_EMULATOR_HOME=/opt/android-sdk/emulator
ANDROID_AVD_HOME=/opt/android-sdk/avd

# Test Data
TEST_DATA_PATH=./testing/data
TEST_FIXTURES_PATH=./testing/fixtures

# Logging
TEST_LOG_LEVEL=debug
TEST_LOG_FILE=./testing/logs/test.log

# Performance Testing
TEST_PERFORMANCE_THRESHOLD=2000
TEST_MEMORY_THRESHOLD=512

# Coverage
TEST_COVERAGE_THRESHOLD=80
TEST_COVERAGE_REPORT_PATH=./testing/reports/coverage

# Parallel Testing
TEST_PARALLEL_WORKERS=4
TEST_TIMEOUT=30000

# Mobile App Testing
TEST_ANDROID_DEVICE_ID=emulator-5554
TEST_ANDROID_PACKAGE_NAME=com.clutch.app
TEST_PARTNERS_PACKAGE_NAME=com.clutch.partners

# Cross-platform Testing
TEST_DESKTOP_APP_PATH=./auto-parts-system/dist
TEST_WEB_APP_URL=http://localhost:3000

# Integration Testing
TEST_WEBHOOK_URL=http://localhost:5000/webhooks/test
TEST_SOCKET_URL=http://localhost:5000

# Accessibility Testing
TEST_A11Y_STANDARD=WCAG2AA
TEST_A11Y_THRESHOLD=0.8

# Security Testing
TEST_SECURITY_SCAN_LEVEL=high
TEST_VULNERABILITY_THRESHOLD=medium

# Browser Testing
TEST_BROWSER_CHROME=true
TEST_BROWSER_FIREFOX=true
TEST_BROWSER_SAFARI=false
TEST_BROWSER_EDGE=true

# Mobile Browser Testing
TEST_MOBILE_CHROME=true
TEST_MOBILE_SAFARI=true

# Test Reporting
TEST_REPORT_FORMAT=html,junit
TEST_REPORT_PATH=./testing/reports
TEST_SCREENSHOT_PATH=./testing/screenshots

# Cleanup
TEST_CLEANUP_AFTER=true
TEST_CLEANUP_DATABASE=true
TEST_CLEANUP_FILES=true
