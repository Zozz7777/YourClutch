# ========================================
# CLUTCH MARKETING WEBSITE - ENVIRONMENT FILE
# ========================================

# BACKEND API CONFIGURATION
BACKEND_API_URL=https://clutch-main-nk7x.onrender.com
BACKEND_API_VERSION=v1
MARKETING_API_ENDPOINT=/api/marketing/statistics

# MONGODB ATLAS CONFIGURATION (via Backend)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_DB=clutch

# WEBSITE CONFIGURATION
WEBSITE_URL=https://www.yourclutch.com
WEBSITE_NAME=Clutch
WEBSITE_DESCRIPTION=The Future of Car Care
WEBSITE_SLOGAN=Drive with Confidence

# CONTACT FORM CONFIGURATION
CONTACT_EMAIL=your-email@yourclutch.com
FORMSPREE_ENDPOINT=https://formspree.io/f/your-form-id

# FEATURE FLAGS
ENABLE_STATISTICS=true
ENABLE_CONTACT_FORM=true
ENABLE_LANGUAGE_SWITCHER=true
ENABLE_DYNAMIC_FAVICON=true

# ANALYTICS & MONITORING
ENABLE_ANALYTICS=false
ENABLE_PERFORMANCE_MONITORING=true

# SECURITY & CORS
CORS_ORIGIN=https://www.yourclutch.com,https://yourclutch.com
ALLOWED_DOMAINS=yourclutch.com,your-backend-domain.onrender.com

# ENVIRONMENT
NODE_ENV=production
PORT=3001
